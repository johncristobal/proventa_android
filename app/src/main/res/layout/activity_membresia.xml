<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MembresiaActivity"
        android:background="@color/negroback">

    <!--Header-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lauotHeader"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/negro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageButton
                android:id="@+id/ReturnButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/backscreenicon"
                android:fontFamily="@font/nunito"
                android:textColor="@color/verdeclaro"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/cursoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:text="Mi cuenta"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <!-- <Button
                android:id="@+id/EdButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:text="Editar"
                android:fontFamily="@font/nunito"
                android:textColor="@color/verdeclaro"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" /-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lauotHeader">


        <!--androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"-->

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/negrodatos"
                    android:orientation="vertical">


                <TextView
                        android:id="@+id/tvMembresiamas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="25dp"
                        android:visibility="gone"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Aún no cuentas con una membresía , Haz clic en el botón para adquirir una o más cuentas."
                        android:textColor="@color/blanco" />

                <Button
                        android:id="@+id/editarButton"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="center"
                        android:text="RENOVAR MEMBRESÍA"
                        android:textAllCaps="false"
                        android:textColor="@color/blanco"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/tvMembresia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Membresía:"
                        android:textColor="@color/blanco" />

                <TextView
                        android:id="@+id/tvtipoMembresia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/nunito"
                        android:text="Premium"
                        android:textColor="@color/blanco" />

                <TextView
                        android:id="@+id/tvdescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Descripción"
                        android:textColor="@color/blanco" />

                <TextView
                        android:id="@+id/tvtipoDescr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/nunito"
                        android:text="Cuenta principal"
                        android:textColor="@color/blanco" />

                <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Estatus:"
                        android:textColor="@color/blanco" />

                <TextView
                        android:id="@+id/tvstatusType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/nunito"
                        android:text="Activa"
                        android:textColor="@color/blanco" />

                <TextView
                        android:id="@+id/tvfecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Fecha en que se adquirió la membresía:"
                        android:textColor="@color/blanco" />

                <TextView
                        android:id="@+id/tvDatosFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/nunito"
                        android:text="2020-01-19    14:30:50"
                        android:textColor="@color/blanco" />

                <TextView
                        android:id="@+id/tvFechaV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="La membresía vence:"
                        android:textColor="@color/blanco" />

                <TextView
                        android:id="@+id/tvDatosFechaV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/nunito"
                        android:text="2021-01-19"
                        android:textColor="@color/blanco" />
                <TextView
                        android:id="@+id/tvl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="120dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text=""
                        android:textColor="@color/blanco" />

            </LinearLayout>
        <!--/androidx.constraintlayout.widget.ConstraintLayout-->
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>